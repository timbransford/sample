<%= form_for @micropost do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>
  <div class="field">
    <%= f.text_area :content %><br />
    You have <span id="charsLeft"></span> chars left.
    <script>
      $('#micropost_content').limit('140','#charsLeft');
    </script>
  </div>
  <div class="actions">
    <%= f.submit "Submit" %>
  </div>
<% end %>